<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp">

        <ImageView
            android:id="@+id/hometwo_iv_profile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/dummy"
            android:maxHeight="200dp"
            android:maxWidth="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/default_profile"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

        <TextView
            android:id="@+id/hometwo_tv_taskcounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:text="Je hebt 0 open taken op je wachten"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/hometwo_tv_welcome"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="266dp" />

        <TextView
            android:id="@+id/hometwo_tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Welkom "
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/hometwo_iv_profile"
            app:layout_constraintVertical_bias="0.75"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="216dp" />

        <TextView
            android:id="@+id/hometwo_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Gebruiker"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/hometwo_tv_welcome"
            app:layout_constraintLeft_toRightOf="@+id/hometwo_tv_welcome"
            app:layout_constraintRight_toRightOf="@+id/hometwo_tv_taskcounter"
            tools:layout_constraintBaseline_creator="0"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintRight_creator="0"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="216dp" />

        <TextView
            android:id="@+id/hometwo_tv_uitstroomlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:text="Uitstroomprofiel: "
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/hometwo_tv_taskcounter"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="317dp" />

        <TextView
            android:id="@+id/hometwo_tv_uitstroomprofiel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Default UitstroomProfiel"
            app:layout_constraintLeft_toRightOf="@+id/hometwo_tv_uitstroomlabel"
            app:layout_constraintTop_toTopOf="@+id/hometwo_tv_uitstroomlabel"
            tools:layout_constraintLeft_creator="0"
            tools:layout_constraintTop_creator="0"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="317dp" />


    </android.support.constraint.ConstraintLayout>


</ScrollView>

