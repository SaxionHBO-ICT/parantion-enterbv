<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="25dp">

        <ImageView
            android:id="@+id/hometwo_iv_profile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/dummy"
            android:maxHeight="200dp"
            android:maxWidth="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/easion_icon"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/hometwo_tv_taskcounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Je hebt 0 open taken op je wachten"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/hometwo_tv_welcome"
            android:layout_marginTop="24dp" />

        <TextView
            android:id="@+id/hometwo_tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welkom "
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/hometwo_iv_profile"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.75" />

        <TextView
            android:id="@+id/hometwo_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gebruiker"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/hometwo_tv_welcome"
            android:layout_marginStart="8dp"
            app:layout_constraintRight_toRightOf="@+id/hometwo_tv_taskcounter"
            app:layout_constraintBaseline_toBaselineOf="@+id/hometwo_tv_welcome" />

        <TextView
            android:id="@+id/hometwo_tv_uitstroomlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uitstroomprofiel: "
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/hometwo_tv_taskcounter"
            android:layout_marginTop="30dp" />

        <TextView
            android:id="@+id/hometwo_tv_uitstroomprofiel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default UitstroomProfiel"
            app:layout_constraintLeft_toRightOf="@+id/hometwo_tv_uitstroomlabel"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/hometwo_tv_uitstroomlabel" />

        <TextView
            android:id="@+id/hometwo_tv_studentnummerlabel"
            android:layout_width="108dp"
            android:layout_height="19dp"
            android:text="Studentnummer:"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/hometwo_tv_uitstroomlabel"
            android:layout_marginTop="16dp" />

        <TextView
            android:text="123456"
            android:layout_width="61dp"
            android:layout_height="19dp"
            android:id="@+id/hometwo_tv_studentnummer"
            app:layout_constraintLeft_toLeftOf="@+id/hometwo_tv_uitstroomprofiel"
            app:layout_constraintTop_toBottomOf="@+id/hometwo_tv_uitstroomprofiel"
            android:layout_marginTop="16dp" />


    </android.support.constraint.ConstraintLayout>


</ScrollView>

